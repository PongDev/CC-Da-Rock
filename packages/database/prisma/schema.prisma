// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int                 @id @default(autoincrement())
  name              String              @unique
  email             String?             @unique
  password          String
  phone             String
  emailVerified     Boolean             @default(false)
  role              RoleType            @default(USER)
  idNumber          String?
  token             String?
  smes              SMEs?
  Transaction       Transaction[]
  VerificationEmail VerificationEmail[]
  SolarSerial       SolarSerial[]
}

enum RoleType {
  USER
  ADMIN
}

model SMEs {
  id       Int      @id @default(autoincrement())
  industry SMEsType
  size     SMEsSize
  user     User     @relation(fields: [userId], references: [id], onUpdate: Cascade)
  userId   Int      @unique
}

enum SMEsType {
  MANUFACTURE
  TRADE
  SERVICE
}

enum SMEsSize {
  SMALL
  MEDIUM
}

model VerificationEmail {
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  email     String
  token     String
}

model Transaction {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id], onUpdate: Cascade)
  cf     Int // carbon footprint
  scc    Int // solar carbon coin
  userId Int
}

model CarbonCreditSerial {
  serialID  String   @id @default(uuid())
  isBurned  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  solarSerial SolarSerial[]
}

model SolarSerial {
  serialID                   String   @id @default(uuid())
  isBurned                   Boolean  @default(false)
  burnedCarbonCreditSerialID String?
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt
  ownerId                    Int?

  burnedCarbonCredit CarbonCreditSerial? @relation(fields: [burnedCarbonCreditSerialID], references: [serialID])
  owner              User?               @relation(fields: [ownerId], references: [id])
}
